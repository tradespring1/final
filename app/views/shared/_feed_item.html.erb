<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span><br />
  <br />
  <br />
  <b>Product:</b>
  <span class="product"><%= feed_item.product %></span><br />
  <b>Price:</b>
  <span class="price"><%= feed_item.price %></span><br />
  <b>Location:</b>
  <span class="location"><%= feed_item.location %></span><br />
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method:  :delete,
                                     confirm: "You sure?",
                                     title:   feed_item.location %>
  <% end %>
</li>
